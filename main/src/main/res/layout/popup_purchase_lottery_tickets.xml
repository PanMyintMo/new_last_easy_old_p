<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="match_parent"
                                        app:shape_topRightRadius="@dimen/dp_12"
                                        app:shape_topLeftRadius="@dimen/dp_12"
                                        app:shape_solidColor="@android:color/white"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

    <com.hjq.shape.layout.ShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:shape_topLeftRadius="5dp"
            app:shape_topRightRadius="5dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginHorizontal="16dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Buy raffle tickets"
                    android:textColor="#ff333333"
                    android:textSize="15sp"/>

            <ImageView
                    android:id="@+id/imgClose"
                    android:layout_width="@dimen/dp_40"
                    android:padding="@dimen/dp_14"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_dialog_close"/>
        </RelativeLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:gravity="center"
                android:text="Number of tickets purchased"
                android:textColor="#ff8b919c"
                android:textSize="14sp"/>

        <com.hjq.shape.layout.ShapeRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="9.5dp"
                app:shape_solidColor="#F6F8FC">

            <ImageView
                    android:id="@+id/imgJian"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_12"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="33dp"
                    android:src="@mipmap/ic_dialog_jian"/>

            <TextView
                    android:id="@+id/tvNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="#ff333333"
                    android:textSize="25sp"
                    android:layout_centerInParent="true"/>

            <ImageView

                    android:id="@+id/imgJia"
                    android:padding="@dimen/dp_12"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="33dp"
                    android:src="@mipmap/ic_dialog_jia"/>
        </com.hjq.shape.layout.ShapeRelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remaining points"
                    android:textColor="#ff272727"
                    android:textSize="14sp"/>

            <TextView
                    android:id="@+id/tvMyJF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="5999 points remaining"
                    android:textColor="#ff8b919c"
                    android:textSize="14sp"/>

        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="15dp"
                android:background="#F2F3F5"/>

        <com.hjq.shape.layout.ShapeRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="68.5dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="15dp"
                app:shape_radius="6dp"
                app:shape_solidColor="#FFF7FC"
                app:shape_strokeColor="#F6DCE5"
                app:shape_strokeWidth="1dp">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="18dp"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spend point"
                        android:textColor="#ff272727"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/tvJFDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="1 coupon/500 points"
                        android:textColor="#ff8b919c"
                        android:textSize="11sp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="18dp"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/tvJf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#fffb044b"
                        android:textSize="25sp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="point"
                        android:textColor="#ff8b919c"
                        android:textSize="14sp"/>
            </LinearLayout>
        </com.hjq.shape.layout.ShapeRelativeLayout>

        <com.hjq.shape.view.ShapeTextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="39dp"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@android:color/white"
                app:shape_radius="6dp"
                app:shape_solidColor="#A743C9"/>
    </com.hjq.shape.layout.ShapeLinearLayout>
</com.hjq.shape.layout.ShapeLinearLayout>