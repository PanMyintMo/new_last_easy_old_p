<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical"
             android:layout_height="match_parent">

    <View
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/bg_my_coin_1"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <FrameLayout
                android:id="@+id/fl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="19dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp">

                <TextView
                        android:id="@+id/titleView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                <ImageView
                        android:id="@+id/btn_back"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:onClick="backClick"
                        android:padding="9dp"
                        android:src="@mipmap/icon_back"
                        android:tint="@color/white"
                        tools:ignore="UseAppTint"/>

            </RelativeLayout>
        </FrameLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_my_recharge_bg"
                    />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="27dp"
                    android:layout_marginStart="63dp"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#F1DEC7"
                        android:drawablePadding="6dp"
                        android:text="@string/string_dqye"
                        android:drawableLeft="@mipmap/ic_coin_1"
                        />

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_coin_2"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        />

                <TextView
                        android:id="@+id/tvMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginStart="4dp"
                        android:textColor="@android:color/white"
                        android:drawablePadding="6dp"
                        android:text="0.00"

                        />
            </LinearLayout>

        </RelativeLayout>

        <com.hjq.shape.layout.ShapeRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:shape_topLeftRadius="10dp"
                app:shape_topRightRadius="10dp"
                android:layout_marginTop="-60dp"
                app:shape_solidColor="#F5F7FB"
                >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                <com.hjq.shape.layout.ShapeLinearLayout
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="29dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        app:shape_radius="6dp"
                        app:shape_solidColor="@android:color/white"
                        android:layout_height="wrap_content">
                    <RelativeLayout
                            android:id="@+id/llBankCardList"
                            android:layout_width="match_parent"
                            android:layout_marginHorizontal="16dp"
                            android:layout_height="52dp">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="#8B919C"
                                android:textSize="14sp"
                                android:gravity="center_vertical"
                                android:text="@string/new_48"
                                />
                        <TextView
                                android:id="@+id/tvBankCard"
                                android:layout_width="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_height="match_parent"
                                android:textColor="#303549"
                                android:textSize="14sp"
                                android:hint="@string/new_49"
                                android:gravity="center_vertical"
                                />
                    </RelativeLayout>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#E6EAF2"
                            />
                    <RelativeLayout
                            android:id="@+id/llBankCardList2"
                            android:layout_width="match_parent"
                            android:layout_marginHorizontal="16dp"
                            android:layout_height="52dp">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="#8B919C"
                                android:textSize="14sp"
                                android:gravity="center_vertical"
                                android:text="@string/new_56"
                                />
                        <TextView
                                android:id="@+id/tvBankNo"
                                android:layout_width="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_height="match_parent"
                                android:textColor="#303549"
                                android:hint="@string/new_49"
                                android:textSize="14sp"
                                android:gravity="center_vertical"
                                />
                    </RelativeLayout>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#E6EAF2"
                            />
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginHorizontal="16dp"
                            android:layout_height="52dp">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="#8B919C"
                                android:textSize="14sp"
                                android:gravity="center_vertical"
                                android:text="@string/new_50"
                                />
                        <TextView
                                android:id="@+id/tvRealName"
                                android:layout_width="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_height="match_parent"
                                android:textColor="#303549"
                                android:textSize="14sp"
                                android:gravity="center_vertical"
                                android:text=""
                                />
                    </RelativeLayout>
                </com.hjq.shape.layout.ShapeLinearLayout>
                <com.hjq.shape.layout.ShapeLinearLayout
                        android:layout_marginHorizontal="16dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        app:shape_radius="6dp"
                        app:shape_solidColor="@android:color/white"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/new_51"
                            android:layout_marginTop="18dp"
                            android:layout_marginStart="16dp"
                            android:textColor="#8B919C"
                            />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:orientation="horizontal"
                            android:layout_marginHorizontal="16dp"
                            >

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ks"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="#24293C"
                                />
                        <EditText
                                android:id="@+id/edMoney"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="35sp"
                                android:textStyle="bold"
                                android:textColorHint="#4D666666"
                                android:layout_marginStart="5dp"
                                android:inputType="numberDecimal"
                                android:hint="@string/new_52"
                                android:background="@color/transparent"
                                />
                    </LinearLayout>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="11dp"
                            android:background="#E6EAF2"
                            />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/new_53"
                            android:layout_marginTop="18dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginStart="16dp"
                            android:textColor="#8B919C"
                            />

                </com.hjq.shape.layout.ShapeLinearLayout>
            </LinearLayout>

            <com.hjq.shape.view.ShapeTextView
                    android:id="@+id/tvLijCz"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:shape_radius="4dp"
                    android:layout_marginBottom="30dp"
                    android:text="@string/profit_cash"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:shape_solidColor="#3A76FE"
                    android:layout_marginHorizontal="16dp"/>
        </com.hjq.shape.layout.ShapeRelativeLayout>

    </LinearLayout>
</FrameLayout>